{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": ["element-plus/global"],
    "paths": {
      "@vue/shared": ["./node_modules/@vue/shared"],
      "@bole-component/*": ["packages/*"]
    }
  }
}
